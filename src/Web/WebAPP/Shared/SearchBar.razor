<BSContainer Container="Container.Fluid" Class="d-flex" PaddingLeftAndRight="Padding.ExtraSmall">
    <BSDropdown>
        <Toggler>
            <BSToggle IsButton="true" Color="BSColor.Secondary" IsOutlined="true">Dropdown</BSToggle>
        </Toggler>
        <Content>
            <BSDropdownItem Url="javascript:void(0);">Action</BSDropdownItem>
            <BSDropdownItem Url="javascript:void(0);">Another action</BSDropdownItem>
            <BSDropdownItem IsDivider="true"/>
            <BSDropdownItem Url="javascript:void(0);">Something else here</BSDropdownItem>
        </Content>
    </BSDropdown>
    <BSInput InputType="InputType.Text" placeholder="Search" @bind-Value="_search"/>
    <BSButton Class="bi bi-search" Color="BSColor.Dark"/>
</BSContainer>

@code
{
    string _search;
}
